<Window
    x:Class="PD3AudioModder.ThemeEditor"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PD3AudioModder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PD3AudioModder.ViewModels"
    Title="Theme Editor"
    Width="1200"
    Height="700"
    x:DataType="vm:ThemeEditorViewModel"
    Background="{DynamicResource BackgroundColor}"
    Icon="avares://PD3AudioModder/assets/icons/audio.ico"
    WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonColor}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonTextColor}" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
        </Style>
        <Style Selector="Border.ColorPreview">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="5,0" />
        </Style>
        <Style Selector="Border.Section">
            <Setter Property="Background" Value="{DynamicResource BorderBackgroundColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0,5" />
        </Style>
        <Style Selector="ColorPicker">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="100" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="75" />
            <Setter Property="Height" Value="30" />
            <Setter Property="IsAlphaEnabled" Value="False" />
        </Style>

    </Window.Styles>

    <Grid Margin="10" RowDefinitions="Auto,*,Auto">
        <!--  Top toolbar  -->
        <Grid
            Grid.Row="0"
            Margin="0,0,0,10"
            ColumnDefinitions="*,Auto">
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="10">
                <Button x:Name="NewThemeButton" Content="New Theme" />
                <Button x:Name="LoadThemeButton" Content="Load Theme" />
                <Button x:Name="SaveThemeButton" Content="Save Theme" />
                <Button x:Name="ExportThemeButton" Content="Export Theme As..." />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock VerticalAlignment="Center" Text="Current Theme:" />
                <ComboBox
                    x:Name="ThemeSelector"
                    Width="150"
                    ItemsSource="{Binding Themes}"
                    SelectedItem="{Binding SelectedTheme, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <!--  Main content area  -->
        <Grid Grid.Row="1" ColumnDefinitions="350,*">
            <!--  Color editor  -->
            <Border
                Grid.Column="0"
                Margin="0,0"
                Classes="Section">
                <DockPanel LastChildFill="True">
                    <TextBlock
                        Margin="0,0,0,10"
                        DockPanel.Dock="Top"
                        FontWeight="Bold"
                        Text="Color Editor" />
                    <ScrollViewer Padding="0,0,13,0">
                        <StackPanel Margin="0,0,10,0" Spacing="10">

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Theme Name" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Name of the theme." />
                                <TextBox
                                    x:Name="ThemeNameTextBox"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Width="150"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    AcceptsReturn="False"
                                    CornerRadius="10"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Watermark="Theme">
                                    Default
                                </TextBox>
                            </Grid>

                            <!--  Color items  -->
                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="BackgroundColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Default background color." />
                                <ColorPicker
                                    x:Name="BackgroundColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource BackgroundColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="TextColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="General text." />
                                <ColorPicker
                                    x:Name="TextColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource TextColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="ButtonColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="General buttons, also used for sidebar." />
                                <ColorPicker
                                    x:Name="ButtonColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource ButtonColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="ButtonTextColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="General buttons text color." />
                                <ColorPicker
                                    x:Name="ButtonTextColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource ButtonTextColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="SecondaryButtonColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Used in the update dialog." />
                                <ColorPicker
                                    x:Name="SecondaryButtonColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource SecondaryButtonColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="SecondaryButtonTextColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Used in the update dialog." />
                                <ColorPicker
                                    x:Name="SecondaryButtonTextColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource SecondaryButtonTextColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="BorderColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Used in the licenses window." />
                                <ColorPicker
                                    x:Name="BorderColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource BorderColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="TertiaryColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Used for the status bar, sidebar, etc." />
                                <ColorPicker
                                    x:Name="TertiaryColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource TertiaryColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="BorderBackgroundColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Settings sections background." />
                                <ColorPicker
                                    x:Name="BorderBackgroundColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource BorderBackgroundColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="WarningTextColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Used for advanced settings warning." />
                                <ColorPicker
                                    x:Name="WarningTextColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource WarningTextColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="SettingsTextColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Used for settings descriptions." />
                                <ColorPicker
                                    x:Name="SettingsTextColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource SettingsTextColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="MenuHoverColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="Hamburger menu hover." />
                                <ColorPicker
                                    x:Name="MenuHoverColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource MenuHoverColor}" />
                            </Grid>

                            <Grid
                                Margin="0,5"
                                ColumnDefinitions="*,Auto,Auto"
                                RowDefinitions="Auto,Auto">
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="SystemAccentColor" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource SettingsTextColor}"
                                    Text="System accent color." />
                                <ColorPicker
                                    x:Name="SystemAccentColorPicker"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                                    Color="{DynamicResource SystemAccentColor}" />
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <Grid Grid.Column="1" RowDefinitions="*,Auto">
                <!--  INI Editor  -->
                <Border
                    Grid.Row="0"
                    Margin="10,0,0,0"
                    Classes="Section">
                    <DockPanel LastChildFill="True">
                        <TextBlock
                            Margin="0,0,0,10"
                            DockPanel.Dock="Top"
                            FontWeight="Bold"
                            Text="INI Editor" />
                        <TextBox
                            x:Name="INIEditor"
                            AcceptsReturn="True"
                            FontFamily="Consolas, Menlo, Monospace"
                            FontSize="14"
                            IsEnabled="{Binding !isDefaultTheme, Mode=OneWay}"
                            Text="" />
                    </DockPanel>
                </Border>

                <Border
                    Grid.Row="1"
                    Margin="10,10,0,0"
                    Background="{DynamicResource BorderBackgroundColor}"
                    Classes="Section">
                    <DockPanel LastChildFill="True">
                        <TextBlock
                            Margin="0,0,0,10"
                            DockPanel.Dock="Top"
                            FontWeight="Bold"
                            Text="Warning Output" />
                        <TextBox
                            x:Name="WarningOutput"
                            Height="200"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            AcceptsReturn="True"
                            Background="Black"
                            FontFamily="Consolas, Menlo, Monospace"
                            FontSize="16"
                            Foreground="Lime"
                            IsReadOnly="True"
                            Text="" />
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>

        <!--  Bottom bar  -->
        <Border
            Grid.Row="2"
            Height="30"
            Margin="0,10,0,0"
            Background="{DynamicResource TertiaryColor}"
            CornerRadius="8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <TextBlock
                    x:Name="ThemeNameText"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Text="Theme: Default Theme" />
            </Grid>
        </Border>
    </Grid>
</Window>