<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PD3AudioModder.MainWindow"
        Title="PD3AudioModder"
        Height="400"
        Width="600"
        Background="#1B262C"
        Icon="avares://PD3AudioModder/assets/icons/audio.ico"
        WindowStartupLocation="CenterScreen">
	<Grid>
		<TabControl>
			<!-- Single File Tab -->
			<TabItem Header="Single File" IsVisible="True" Foreground="#BBE1FA">
				<Grid>
					<Border Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
						<Grid RowDefinitions="Auto,Auto,Auto,Auto">
							<!-- Title -->
							<TextBlock Grid.Row="0"
                                       Text="PD3AudioModder"
                                       HorizontalAlignment="Center"
                                       FontSize="28"
                                       Foreground="#BBE1FA"
                                       Margin="10"
                                       TextWrapping="Wrap"
                                       MaxWidth="250"/>

							<!-- Upload Button -->
							<Button x:Name="UploadButton"
                                    Grid.Row="1"
                                    Content="Upload Files"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Width="250"
                                    Height="40"
                                    Background="#3282B8"
                                    Foreground="White"
                                    FontSize="16"
                                    Padding="10,5"
                                    CornerRadius="10"
                                    Margin="0,0,0,15"/>

							<!-- Convert Button -->
							<Button x:Name="ConvertButton"
                                    Grid.Row="2"
                                    Content="Convert Files"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Width="250"
                                    Height="40"
                                    Background="#3282B8"
                                    Foreground="White"
                                    FontSize="16"
                                    Padding="10,5"
                                    CornerRadius="10"
                                    Margin="0,0,0,15"/>

							<!-- Status -->
							<TextBlock x:Name="StatusTextBlock"
                                       Grid.Row="3"
                                       Text="Status: Waiting for input..."
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       Foreground="#BBE1FA"
                                       Margin="10"
                                       TextWrapping="Wrap"
                                       MaxWidth="250"
									   Height="40"/>
						</Grid>
					</Border>
				</Grid>
			</TabItem>
			<!-- Multiple Files Tab -->
			<TabItem Header="Batch Conversion" IsVisible="True" Foreground="#BBE1FA">
				<Grid>
					<Border Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
						<Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
							<!-- Title -->
							<TextBlock Grid.Row="0"
                                       Text="PD3AudioModder"
                                       HorizontalAlignment="Center"
                                       FontSize="24"
                                       Foreground="#BBE1FA"
                                       Margin="10"
                                       TextWrapping="Wrap"
                                       MaxWidth="350"/>

							<!-- Audio Folder Button -->
							<Button x:Name="SelectAudioFolderButton"
                                    Grid.Row="1"
                                    Content="Select Audio Folder"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Width="280"
                                    Height="40"
                                    Background="#3282B8"
                                    Foreground="White"
                                    FontSize="16"
                                    Padding="10,5"
                                    CornerRadius="10"
                                    Margin="0,0,0,15"/>

							<!-- Game Files Folder Button -->
							<Button x:Name="SelectGameFilesFolderButton"
                                    Grid.Row="2"
                                    Content="Select Game Files Folder"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Width="280"
                                    Height="40"
                                    Background="#3282B8"
                                    Foreground="White"
                                    FontSize="16"
                                    Padding="10,5"
                                    CornerRadius="10"
                                    Margin="0,0,0,15"/>

							<!-- Batch Convert Button -->
							<Button x:Name="BatchConvertButton"
                                    Grid.Row="3"
                                    Content="Start Batch Conversion"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Width="280"
                                    Height="40"
                                    Background="#3282B8"
                                    Foreground="White"
                                    FontSize="16"
                                    Padding="10,5"
                                    CornerRadius="10"
                                    Margin="0,0,0,15"/>

							<!-- Batch Status -->
							<TextBlock x:Name="BatchStatusTextBlock"
                                       Grid.Row="4"
                                       Text="Status: Waiting for folders..."
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       Foreground="#BBE1FA"
                                       Margin="10"
                                       TextWrapping="Wrap"
                                       MaxWidth="250"
									   Height="40"/>

							<!-- Progress Bar -->
							<ProgressBar x:Name="BatchProgressBar"
                                        Grid.Row="5"
                                        Width="280"
                                        Height="20"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="0"
                                        Foreground="#3282B8"
                                        Background="#0F4C75"
                                        CornerRadius="5"
                                        Margin="0,10,0,0"/>
						</Grid>
					</Border>
				</Grid>
			</TabItem>
		</TabControl>

		<!-- Settings Button -->
		<Button x:Name="SettingsButton"
                Content="Settings"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Background="#3282B8"
                Foreground="White"
                FontSize="16"
                Padding="10,5"
                CornerRadius="10"
				Click="OnSettingsClick"/>
	</Grid>
</Window>
