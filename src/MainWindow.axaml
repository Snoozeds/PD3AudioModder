<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PD3AudioModder.MainWindow"
        Title="PD3AudioModder"
        Height="400"
        Width="600"
        Background="#1B262C"
		Icon="avares://PD3AudioModder/assets/icons/audio.ico"
		WindowStartupLocation="CenterScreen">
	<Grid>
		<!-- Main content -->
		<Border Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Grid RowDefinitions="Auto,Auto,Auto,Auto">
				<!-- Title -->
				<TextBlock Grid.Row="0"
                           Text="PD3AudioModder"
                           HorizontalAlignment="Center"
                           FontSize="28"
                           Foreground="#BBE1FA"
                           Margin="10"
                           TextWrapping="Wrap"
                           MaxWidth="250"/>

				<!-- Upload Button -->
				<Button x:Name="UploadButton"
                        Grid.Row="1"
                        Content="Upload Files"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center"
                        Width="250"
                        Height="40"
                        Background="#3282B8"
                        Foreground="White"
                        FontSize="16"
                        Padding="10,5"
                        CornerRadius="10"
                        Margin="0,0,0,15"/>

				<!-- Convert Button -->
				<Button x:Name="ConvertButton"
                        Grid.Row="2"
                        Content="Convert Files"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center"
                        Width="250"
                        Height="40"
                        Background="#3282B8"
                        Foreground="White"
                        FontSize="16"
                        Padding="10,5"
                        CornerRadius="10"
                        Margin="0,0,0,15"/>

				<!-- Status -->
				<TextBlock x:Name="StatusTextBlock"
                           Grid.Row="3"
                           Text="Status: Waiting for input..."
                           HorizontalAlignment="Center"
                           FontSize="16"
                           Foreground="#BBE1FA"
                           Margin="10"
                           TextWrapping="Wrap"
                           MaxWidth="250"/>
			</Grid>
		</Border>

		<!-- Licenses Button -->
		<Button x:Name="LicensesButton"
                Content="View Licenses"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Background="#3282B8"
                Foreground="White"
                FontSize="16"
                Padding="10,5"
                CornerRadius="10"
                Click="OnLicensesClick"/>
	</Grid>
</Window>
